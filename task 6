        "text = f.read()\n",
        "f.close()\n",
        "\n",
        "f = open('Sample.txt', 'r')\n",
        "lines = f.readlines()\n",
        "f.close()\n",
        "\n",
        "no_of_lines = len(lines)\n",
        "print('number of lines:', no_of_lines)\n",
